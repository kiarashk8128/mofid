@model IdentityTest.Models.Dto.Account.VerifyPhoneNumberDto

@{
    ViewData["Title"] = "VerifyPhoneNumber";
}

<h1>VerifyPhoneNumber</h1>

<h4>Please Enter The Code Which Has Been Sent To Your Phone Number</h4>
<h2>@Model.PhoneNumber</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="VerifyPhoneNumber">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="PhoneNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

